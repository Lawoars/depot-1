<div class="form">
  <% if flash[:alert] %>
      <p id="notice"><%= flash[:notice] %></p>
  <% end %>
  <%= form_tag do %>
      <fieldset>
        <legend>Залогинтесь, пожалуйста</legend>
        <div class="field form-group">
          <%= label_tag :name, 'Имя:' %>
          <%= text_field_tag :name, params[:name],  class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= label_tag :password, 'Пароль:' %>
          <%= password_field_tag :password, params[:password],  class: "form-control" %>
        </div>
        <div>
          <%= submit_tag "Войти", class: 'btn btn-default' %>
        </div>
        </fieldset>
      <% end %>
</div>