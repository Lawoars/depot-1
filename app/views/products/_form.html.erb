<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, html: {class: 'form-control'} %>
  </div>
  <div class="field form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 6, html: {class: 'form-control'} %>
  </div>
  <div class="field form-group">
    <%= f.label :image_url %><br>
    <%= f.file_field :image_url, html: {class: 'form-control'} %>
  </div>
  <div class="field form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price, html: {class: 'form-control'} %>
  </div>
  <div class="actions">
    <%= f.submit 'Отослать!',  class: 'btn btn-default' %>
  </div>
<% end %>
