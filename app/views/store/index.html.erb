<h1>Каталог</h1>
<% cache ['store', Product.latest] do %>
  <% @products.each do |product| %>
    <% cache ['entry', product] do %>
      <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
              <%= image_tag(product.image_url, class: 'img-thumbnail') %>
            </div>
            <div class="col-md-7">
              <h3><%= product.title %></h3>
              <%= sanitize(product.description) %>
            </div>
            <div class="col-md-3">
                <h3 class="text-center text-info"><%= number_to_currency(product.price, unit: "грн.", separator: ",", delimiter: "", format: "%n %u") %></h3>
                <%= button_to 'Добавить в корзину', line_items_path(product_id: product) %>
            </div>
        </div>
      </div>
    <br />
    <% end %>
  <% end %>
<% end %>


