$("#notice").hide();
if($('#cart').val() == '') {
  $('#cart').hide();
  $('#cart').html("<%= escape_javascript render(@cart) %>");
  $('#cart').show('slow');
} else {
  $('#cart').html("<%= escape_javascript render(@cart) %>");
}

$('#cart-link').html("<%= escape_javascript link_to 'Корзина', cart_path(session[:cart_id]) %>");

$('#current-item').css({'background-color':'#88ff88'}).animate({'background-color':'#FFF'}, 1000);
